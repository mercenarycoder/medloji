<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_upperdata"
        android:id="@+id/toolbaredit"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginRight="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#03FCF7F7"
                    android:src="@drawable/back"
                    android:id="@+id/go_back2"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Product Detail"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
 <ScrollView
     android:layout_width="match_parent"
     android:layout_marginTop="70dp"
     android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_margin="10dp"
       android:background="@drawable/medicine_recycler">
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:id="@+id/medicine_image2"
        android:src="@drawable/ic_medicine"
        />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">
       <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_weight="0.5"
        android:paddingStart="5dp"
        android:text="Medicine Name"
        android:textColor="#000"
        android:id="@+id/medicine_name2"
        android:gravity="center|left"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:text="15 Tabs/Strip"
            android:textColor="#E0BB09"
            android:paddingStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/group_but"
            android:textStyle="bold"
            android:id="@+id/medicine_strip2"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingStart="5dp"
        android:layout_marginTop="5dp"
        android:maxHeight="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="A brief description of the medicine will be "
        android:textColor="#000"
        android:id="@+id/medicine_decription2"
        android:gravity="center|left"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:paddingStart="5dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rs.100"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/medicine_price2"
            android:textColor="#000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            >
            <View
                android:layout_width="60dp"
                android:layout_height="2dip"
                android:layout_centerInParent="true"
                android:background="#000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rs.100"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:layout_weight="1.3"
                android:gravity="center"
                android:id="@+id/medicine_price_old2"
                android:textColor="#000"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginRight="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/medicine_minus2"
                android:src="@drawable/ic_minus"
                android:background="@drawable/cart_effect"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/medicine_quantity2"
                android:textColor="#000"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/medicine_add2"
                android:src="@drawable/ic_plus"
                android:background="@drawable/cart_effect"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
 </ScrollView>
    <ImageButton
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:tint="#000"
        android:layout_marginBottom="10dp"
        android:paddingRight="100dp"
        android:layout_alignParentBottom="true"
        android:background="#25FFFFFF"
        android:id="@+id/goback_medicine"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_alignParentRight="true"
       android:id="@+id/proceed_to_confirm"
        android:text="Place Order"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_margin="10dp"
        android:background="@drawable/cart_button"
        />
</RelativeLayout>