<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="330dp"
    android:baselineAligned="false"
    android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:textColorHint="#7c7979"
        app:boxBackgroundColor="#007C7A7A"
        app:helperTextTextAppearance="@style/MyAppearance"
        app:hintTextAppearance="@style/MyAppearance">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:layout_marginTop="0dp"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:id="@+id/old_password"
            android:textColorHint="#7C7979"
            android:textSize="14sp"
            android:textColorHighlight="#7C7979"
            android:backgroundTint="#7C7979"
            android:layout_weight="1"
            android:gravity="center|left"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:textColorHint="#7c7979"
        app:boxBackgroundColor="#007C7A7A"
        app:helperTextTextAppearance="@style/MyAppearance"
        app:hintTextAppearance="@style/MyAppearance">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:height="50dp"
            android:backgroundTint="#7C7979"
            android:gravity="center|left"
            android:hint="New Password"
            android:paddingStart="15dp"
            android:textColorHighlight="#7C7979"
            android:textColorHint="#7C7979"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:textColorHint="#7c7979"
        app:boxBackgroundColor="#007C7A7A"
        app:helperTextTextAppearance="@style/MyAppearance"
        app:hintTextAppearance="@style/MyAppearance">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:layout_marginTop="0dp"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:id="@+id/confirm_password"
            android:textColorHint="#7C7979"
            android:textSize="14sp"
            android:textColorHighlight="#7C7979"
            android:backgroundTint="#7C7979"
            android:layout_weight="1"
            android:gravity="center|left"
            />
    </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Cancel"
        android:id="@+id/cancel_change"
        android:textColor="@color/colorPrimaryDark"
        android:background="#fff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Confirm"
        android:id="@+id/confirm_change"
        android:textColor="#7C7979"
        android:background="@drawable/menu_butt"
        />
</LinearLayout>
</LinearLayout>